@model DescricaoModel
@{
    ViewBag.Title = "Editar";
}

<h4>
    @TempData["Mensagem"]
</h4>


@using (Html.BeginForm("Salvar", "Jogo", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(false);

    if (Model == null || Model.ID == 0)
    {
        <h2>Cadastro de Jogo</h2>
    }
    else
    {
        <h2>Edição de Jogo</h2>
        @Html.HiddenFor(m => m.ID)
    }


    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categorias, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(m => m.Categorias,"Selecione uma Categoria", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Categorias)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Selos, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(m => m.Selos,"Selecione um Selo", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Selos)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descricao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Imagem, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Imagem, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Video, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Video, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}
@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

