@model RelatorioModel
@{
    ViewBag.Title = "Jogos Disponíveis";
}

@Html.ActionLink("Cricar Jogo", "Criar", "Jogo"))
@if (Model == null)
{
    <h2>Nenhum Jogo Encontrado</h2>
}
else
{
    <h2>Jogos disponíveis para locação</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 40%">Jogo</th>            
            <th style="width: 30%">Categoria</th>
            <th style="width: 30%">Preço</th>
            <th style="width: 30%">Descricao</th>
        </tr>
    </thead>
          
       @foreach (var item in Model.ListaJogos)
       {
        <tr>
            <td>@item.Nome </td>
            <td>@item.Categoria</td>
            <td>@item.Preco</td>
            <td>@Html.ActionLink("Descricao jogo", "Detalhes", "Jogo", new { id = item.ID }, null)</td>
        </tr>
       }
</table>

<p> Total de jogos: @Model.TotalJogos</p>
<p>Jogo mais caro: @Model.MaisCaro</p>
<p>Jogo mais Barato: @Model.MaisBarato</p>
}