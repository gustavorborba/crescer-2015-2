@model RelatorioModel
@{
    ViewBag.Title = "Jogos Disponíveis";
}

<h2>Jogos disponíveis para locação</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 40%">Jogo</th>            
            <th style="width: 30%">Categoria</th>
            <th style="width: 30%">Preço</th>
            <th style="width: 30%">Descricao</th>
        </tr>
    </thead>
          
       @foreach (var item in Model.ListaJogos)
        {
        <tr>
            <td>@item.Nome </td>
            <td>@item.Categoria</td>
            <td>@item.Preco</td>
            <td>@Html.ActionLink("Descricao jogo","Detalhes","Descricao", new { id=item.ID},null)</td>
        </tr>
        }
</table>
<div style="margin-left:10px">
    <p>Total de jogos: @Model.TotalJogos</p>
    <p>Mais Caro: @Model.MaisCaro</p>
    <p>Mais Caro: @Model.MaisBarato</p>
</div>
